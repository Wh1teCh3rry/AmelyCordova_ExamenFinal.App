<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmelyCordova_ExamenFinal.ACViews.AC_ViewItems"
             Title="AC_ViewItems">

    <StackLayout>

        <Label Text="Listado" FontSize="Title" Padding="30,10,30,10"/>

        <Button Text="Llamar API" Clicked="Button_Clicked"/>

        <ListView x:Name="Lista">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding id}" Detail="{Binding strDrink}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>